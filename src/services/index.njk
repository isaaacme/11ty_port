---
layout: layouts/base.njk
title: שירותים
---
<div class="services">
  <h1 class="services__title">שירותים</h1>
  <div class="services__grid">
    {% for service in services.services %}
      <div class="services__card">
        <img class="services__image" src="{{ service.image }}" alt="{{ service.title }}">
        <h2 class="services__card-title">{{ service.title }}</h2>
        <p class="services__description">{{ service.description }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .services {
    padding: var(---l) 0;
  }
  
  .services__title {
    margin-bottom: var(---l);
    font-size: var(---3);
  }
  
  .services__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(---m);
  }
  
  .services__card {
    background: var(--white);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }
  
  .services__image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .services__card-title {
    padding: var(---s);
    margin: 0;
    font-size: var(---1);
  }
  
  .services__description {
    padding: 0 var(---s) var(---s);
    margin: 0;
    color: var(--text);
    opacity: 0.8;
  }
</style> 