---
layout: layouts/base.njk
title: פרויקטים
---
<div class="projects">
  <h1 class="projects__title">פרויקטים</h1>
  <div class="projects__grid">
    {% for project in projects.projects %}
      <div class="projects__card">
        <img class="projects__image" src="{{ project.image }}" alt="{{ project.title }}">
        <div class="projects__content">
          <h2 class="projects__card-title">{{ project.title }}</h2>
          <p class="projects__description">{{ project.description }}</p>
          <div class="projects__meta">
            <span class="projects__client">{{ project.client }}</span>
            <span class="projects__year">{{ project.year }}</span>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .projects {
    padding: var(---l) 0;
  }
  
  .projects__title {
    margin-bottom: var(---l);
    font-size: var(---3);
  }
  
  .projects__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(---m);
  }
  
  .projects__card {
    background: var(--white);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }
  
  .projects__image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .projects__content {
    padding: var(---s);
  }
  
  .projects__card-title {
    margin: 0;
    font-size: var(---1);
  }
  
  .projects__description {
    margin: var(---xs) 0;
    color: var(--text);
    opacity: 0.8;
  }
  
  .projects__meta {
    display: flex;
    justify-content: space-between;
    color: var(--brand);
    font-size: var(----1);
    margin-top: var(---s);
  }
</style> 